<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="http://xamarin.com/schemas/2020/toolkit"
    x:Class="SeeNav.Pages.PermissionsPage"
    >
    <NavigationPage.HasNavigationBar>
        <x:Boolean>false</x:Boolean>
    </NavigationPage.HasNavigationBar>
    <ContentPage.Content>
        <AbsoluteLayout x:Name="screen">

            <StackLayout x:Name="layout" BackgroundColor="White" Opacity="0.85" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1">
                <ImageButton x:Name="permissionImage" Source="icon_user_permission.png"  Opacity="0.88"/>
                <Label x:Name="permissionLabel" HorizontalOptions="Center" Text="Permissions" FontSize="Title" />
                <Label x:Name="descriptionLabel"  VerticalOptions="Center" HorizontalOptions="Center" FontSize="18"  Text="See in what direction places are by using gps, mobile sensors and camera" HorizontalTextAlignment="Center"/>

                <StackLayout x:Name="permissionButtonsLayout" />

            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
